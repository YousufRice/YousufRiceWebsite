# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to git!

# ==========================================
# META CONVERSIONS API CONFIGURATION
# ==========================================

# Meta Dataset ID (Public - used in browser AND server)
# Get from: https://business.facebook.com/events_manager2 → Datasets
NEXT_PUBLIC_META_DATASET_ID="your_dataset_id_here"

# Meta Access Token (Private - server-side only)
# Get from: https://business.facebook.com/settings/system-users
META_ACCESS_TOKEN="your_system_user_access_token_here"

# ==========================================
# TESTING (OPTIONAL)
# ==========================================

# Meta Test Event Code - for testing Conversions API
# Set to "yousufrice" or your test code to enable test mode
# Remove or leave empty for production
NEXT_PUBLIC_META_TEST_EVENT_CODE=""

# Examples:
# Development/Testing: NEXT_PUBLIC_META_TEST_EVENT_CODE="yousufrice"
# Production: NEXT_PUBLIC_META_TEST_EVENT_CODE=""

# ==========================================
# APPWRITE CONFIGURATION
# ==========================================

# Appwrite API Endpoint
NEXT_PUBLIC_APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"

# Appwrite Project ID
NEXT_PUBLIC_APPWRITE_PROJECT_ID="your_project_id"

# Appwrite API Key (Server-side only - for admin operations)
APPWRITE_API_KEY="your_api_key_here"

# Database and Collection IDs
NEXT_PUBLIC_APPWRITE_DATABASE_ID="your_database_id"
NEXT_PUBLIC_APPWRITE_PRODUCTS_TABLE_ID="your_products_table_id"
NEXT_PUBLIC_APPWRITE_ORDERS_TABLE_ID="your_orders_table_id"
NEXT_PUBLIC_APPWRITE_CUSTOMERS_TABLE_ID="your_customers_table_id"
NEXT_PUBLIC_APPWRITE_ADDRESSES_TABLE_ID="your_addresses_table_id"
NEXT_PUBLIC_APPWRITE_PRODUCT_IMAGES_TABLE_ID="your_product_images_table_id"
NEXT_PUBLIC_APPWRITE_SESSIONS_TABLE_ID="sessions"

# Storage Bucket ID (used for product images)
NEXT_PUBLIC_APPWRITE_STORAGE_BUCKET_ID="your_bucket_id"

# Banner Storage Bucket ID (used for banner images)
NEXT_PUBLIC_BANNER_STORAGE_BUCKET_ID="your_banner_bucket_id"

# ==========================================
# DOMAIN CONFIGURATION
# ==========================================

# Primary domain for canonical URLs and sitemap
NEXT_PUBLIC_PRIMARY_DOMAIN="https://yourdomain.com"

# Additional domains (if using multiple domains)
NEXT_PUBLIC_DOMAIN_2="https://yourdomain2.com"
NEXT_PUBLIC_DOMAIN_3="https://yourdomain3.com"

# ==========================================
# EMAIL CONFIGURATION (HOSTINGER SMTP)
# ==========================================

# SMTP Password for support@yousufrice.com
# Get from: Hostinger → Email → Email Accounts → support@yousufrice.com
SMTP_PASSWORD="your_smtp_password_here"

# ==========================================
# OPENAI CONFIGURATION (AI CHAT AGENTS)
# ==========================================

# OpenAI API Key (Server-side only)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_api_key_here"
